# Required Shopify API Credentials
# Get these from your Shopify Partner Dashboard
# when you create a new app
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# App URL (must be HTTPS in production)
# For Netlify, this should be your Netlify site URL (e.g., https://yoursite.netlify.app)
HOST=https://yoursite.netlify.app

# Required API Scopes (comma-separated, no spaces)
# These scopes are required for the app to function properly
SCOPES=write_products,write_orders,write_draft_orders,read_orders

# Session Secret (generate a random string)
# This is used to encrypt session data
SESSION_SECRET=generate_a_secure_random_string_here

# For Netlify Functions
# These are automatically set by Netlify in production
# but can be overridden here for local development
NETLIFY_DEV=true

# Environment (development/production)
NODE_ENV=development
NODE_ENV=development
